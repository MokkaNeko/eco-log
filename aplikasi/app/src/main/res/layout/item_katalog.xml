<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/itemContainer"
    app:cardCornerRadius="10dp"
    app:elevation="5dp"
    app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/katalog_item_image"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_placeholder_1x1" />

            <TextView
                android:id="@+id/katalog_item_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="Item 1"
                android:layout_marginHorizontal="8dp"
                android:paddingTop="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="18sp"
                style="@style/Text.Display.XSmall"
                android:textColor="@color/green_primary" />

            <TextView
                android:id="@+id/katalog_item_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:layout_marginHorizontal="8dp"
                style="@style/Text.Body.Normal"
                android:textColor="@color/dark_grey" />

            <TextView
                android:id="@+id/katalog_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"
                android:maxLines="4"
                android:minLines="4"
                style="@style/Text.Body.Normal"
                android:textColor="@color/black"
                android:layout_marginHorizontal="8dp" />

        </LinearLayout>

</androidx.cardview.widget.CardView>